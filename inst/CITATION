citHeader("To cite pwrss in publications use:")
bibentry(bibtype = "Manual",
         title        = "{pwrss}: Statistical Power and Sample Size Calculation Tools",
         author       = as.person("Metin Bulus"),
         note         = "R package version 0.3.0",
         year         = "2023",
         url = "https://CRAN.R-project.org/package=pwrss",
         textVersion  =
           paste("Bulus, M. (2023).",
                 "pwrss:  Statistical Power and Sample Size Calculation Tools.",
                 "R package version 0.3.0.",
                 "https://CRAN.R-project.org/package=pwrss"))
